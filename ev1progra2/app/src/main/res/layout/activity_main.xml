<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvValorComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="-125dp"
        android:text="$0."
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textComida"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCazuela" />

    <TextView
        android:id="@+id/tvValorCazuelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="$0."
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewCazuela"
        app:layout_constraintTop_toBottomOf="@+id/textCantidadCazuela" />

    <TextView
        android:id="@+id/tvValorTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:text="$0."
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textTotal"
        app:layout_constraintTop_toBottomOf="@+id/tvValorPropina" />

    <TextView
        android:id="@+id/tvValorPropina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:text="$0."
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textPropina"
        app:layout_constraintTop_toBottomOf="@+id/tvValorComida" />

    <EditText
        android:id="@+id/editTextCantidad2"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/textCantidadCazuela"
        app:layout_constraintTop_toBottomOf="@+id/textCazuela" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="252dp"
        android:layout_height="182dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/captura_de_pantalla_2023_12_12_153343" />

    <ImageView
        android:id="@+id/imageViewPastel"
        android:layout_width="160dp"
        android:layout_height="526dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="-200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo"
        app:srcCompat="@drawable/el_pastel_de_choclo" />

    <ImageView
        android:id="@+id/imageViewCazuela"
        android:layout_width="170dp"
        android:layout_height="565dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="-400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPastel"
        app:srcCompat="@drawable/cazuela_chilena" />

    <TextView
        android:id="@+id/textCantidadPastel"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:inputType="number"
        android:text="Cant."
        app:layout_constraintStart_toEndOf="@+id/imageViewPastel"
        app:layout_constraintTop_toBottomOf="@+id/textPastel" />

    <TextView
        android:id="@+id/textCantidadCazuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Cant."
        app:layout_constraintStart_toEndOf="@+id/imageViewCazuela"
        app:layout_constraintTop_toBottomOf="@+id/textCazuela" />

    <EditText
        android:id="@+id/editTextCantidad1"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:text="0"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/textCantidadPastel"
        app:layout_constraintTop_toBottomOf="@+id/textPastel" />

    <TextView
        android:id="@+id/textPastel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="Pastel de Choclo"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewPastel"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    <TextView
        android:id="@+id/textCazuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="70dp"
        android:text="Cazuela"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewCazuela"
        app:layout_constraintTop_toBottomOf="@+id/editTextCantidad1" />

    <TextView
        android:id="@+id/tvValorPasteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="$0."
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewPastel"
        app:layout_constraintTop_toBottomOf="@+id/textCantidadPastel" />

    <TextView
        android:id="@+id/textComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="-120dp"
        android:text="Comida"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCazuela" />

    <TextView
        android:id="@+id/textPropina"
        android:layout_width="55dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Propina"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/switch1"
        app:layout_constraintTop_toBottomOf="@+id/textComida" />

    <TextView
        android:id="@+id/textTotal"
        android:layout_width="59dp"
        android:layout_height="26dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        android:text="TOTAL"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPropina" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="-95dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCazuela" />

</androidx.constraintlayout.widget.ConstraintLayout>